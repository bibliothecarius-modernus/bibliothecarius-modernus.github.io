---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts limit:50 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description>
          {% if post.article-summary %}
          {{ post.article-summary | xml_escape | truncate: 150 }}
          {% else %}
          {{ post.excerpt | strip_html | truncate: 150 | xml_escape }}
          {% endif %}
          
          {% if post.original_work %}
          &lt;p&gt;
          {% if post.original_work.latin_title %}{{ post.original_work.latin_title | xml_escape }}{% endif %}
          {% if post.original_work.author %} by {{ post.original_work.author | xml_escape }}{% endif %}
          {% if post.original_work.date %} ({{ post.original_work.date | xml_escape }}){% endif %}
          &lt;/p&gt;
          {% endif %}
        </description>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for category in post.categories %}
        <category>{{ category | xml_escape }}</category>
        {% endfor %}
        {% if post.youtube_id %}
        <enclosure url="https://img.youtube.com/vi/{{ post.youtube_id }}/maxresdefault.jpg" type="image/jpeg" length="0"/>
        {% endif %}
      </item>
    {% endfor %}
  </channel>
</rss>