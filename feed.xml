---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts limit:20 %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ site.baseurl }}{{ post.url }}</guid>
        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        {% if post.original_work.author %}<dc:creator>{{ post.original_work.author | xml_escape }}</dc:creator>{% endif %}
        <description>
          <![CDATA[
          {% if post.original_work.context %}
            <p>{{ post.original_work.context }}</p>
          {% endif %}
          
          <p>
            <strong>Original Work:</strong> 
            {% if post.original_work.latin_title %}<em>{{ post.original_work.latin_title }}</em>{% endif %}
            {% if post.original_work.author %} by {{ post.original_work.author }}{% endif %}
            {% if post.original_work.date %} ({{ post.original_work.date }}){% endif %}
            {% if post.original_work.publication %}<br/>Publication: {{ post.original_work.publication }}{% endif %}
          </p>
          
          {% if post.categories.size > 0 %}
            <p>
              <strong>Categories:</strong> 
              {% for category in post.categories %}
                {{ category }}{% unless forloop.last %}, {% endunless %}
              {% endfor %}
            </p>
          {% endif %}
          
          {% if post.youtube_id %}
            <p><a href="https://www.youtube.com/watch?v={{ post.youtube_id }}">Watch on YouTube</a></p>
          {% endif %}
          
          {% if post.external_resources %}
            <p>
              <strong>External Resources:</strong><br/>
              {% if post.external_resources.archive_url %}
                <a href="{{ post.external_resources.archive_url }}">Internet Archive</a><br/>
              {% endif %}
              {% if post.external_resources.github_url %}
                <a href="{{ post.external_resources.github_url }}">GitHub Repository</a>
              {% endif %}
            </p>
          {% endif %}
          
          <p><a href="{{ site.url }}{{ site.baseurl }}{{ post.url }}">Read full analysis at {{ site.title }}</a></p>
          ]]>
        </description>
        {% for category in post.categories %}
        <category>{{ category | xml_escape }}</category>
        {% endfor %}
        {% if post.youtube_id %}
        <enclosure url="https://img.youtube.com/vi/{{ post.youtube_id }}/maxresdefault.jpg" type="image/jpeg" length="0"/>
        {% endif %}
      </item>
    {% endfor %}
  </channel>
</rss>